

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', value: @task.title %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control', value: @task.details %>
  </div>

  <div id="completed_form">
    <p> done ! </p>
    <%= f.label :completed %>
    <%= f.check_box :completed, class: 'form-control', value: @task.completed %>
  </div>


  <%= f.submit class: 'btn btn-primary' %>
<% end %>


