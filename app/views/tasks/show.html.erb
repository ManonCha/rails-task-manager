<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<div>
<%= link_to("back to tasks list", tasks_path) %>
<%= link_to("Edit this task", edit_task_path) %>
<%= link_to "Delete this task", task_path(@task),
  method: :delete,
  data: { confirm: "Are you sure?" } %>
</div>
