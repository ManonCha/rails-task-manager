<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
      <li>
          <% if task.completed %>
              <i class="far fa-check-square"></i>
          <% else %>
              <i class="far fa-square"></i>
          <%end%>
          <%=link_to task_path(task) do %>
              <%= task.title %>
          <%end%>
          <%= link_to "Delete this task", task_path(task), method: :delete %>
      </li>
  <% end %>
</ul>

<%= link_to("Create new task", new_task_path) %>
